---
import { useState } from 'react';
import FormMotorcycle from '@components/react/Form'; // Ajusta la ruta seg√∫n sea necesario
import API from '@utils/api';

const endpoint = API.POST_MOTORCYCLES; // Define el endpoint que quieres usar
const fields = [
  { name: 'id', type: 'number', placeholder: 'ID' },
  { name: 'brand', type: 'text', placeholder: 'Brand' },
  { name: 'price', type: 'number', placeholder: 'Price' },
  { name: 'snid', type: 'text', placeholder: 'SNID' },
  { name: 'abs', type: 'checkbox', placeholder: 'ABS' },
  { name: 'forkType', type: 'text', placeholder: 'Fork Type' },
  { name: 'helmetIncluded', type: 'checkbox', placeholder: 'Helmet Included' },
  { name: 'arrivalDate', type: 'datetime-local', placeholder: 'Arrival Date' }
];
---

<div class="p-4 m-4 rounded-lg shadow-lg">
  <h2 style={{ fontSize: '2rem', fontWeight: 'bold', color: 'white' }}>
    Register Motorcycles
  </h2>
</div>
<div class="ps-4 ms-4 rounded-lg shadow-lg w-[32rem]">
  <FormMotorcycle client:load endpoint={endpoint} fields={fields} />
</div>