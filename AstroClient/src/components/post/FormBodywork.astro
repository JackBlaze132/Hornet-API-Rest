---
import { useState } from 'react';
import Form from '@components/react/Form'; // Ajusta la ruta seg√∫n sea necesario
import API from '@utils/api';

const endpoint = API.POST_BODYWORKS; // Define el endpoint que quieres usar
const fields = [
  { name: 'id', type: 'number', placeholder: 'ID' },
  { name: 'name', type: 'text', placeholder: 'Name' },
  { name: 'hasSunroof', type: 'checkbox', placeholder: 'Has Sunroof' },
];
---
<div class="p-4 m-4 rounded-lg shadow-lg">
  <h2 style={{ fontSize: '2rem', fontWeight: 'bold', color: 'white' }}>
    Register Boywork
  </h2>
</div>
<div class="ps-4 ms-4 rounded-lg shadow-lg w-[32rem]">
  <Form client:load endpoint={endpoint} fields={fields} />
</div>