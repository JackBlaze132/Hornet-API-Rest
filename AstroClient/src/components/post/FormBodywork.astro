import { useState } from 'react';
import Form from '@components/react/Form'; // Ajusta la ruta seg√∫n sea necesario
import API from '@utils/api';

const endpoint = API.POST_BODYWORKS; // Define el endpoint que quieres usar
const fields = [
  { name: 'id', type: 'number', placeholder: 'ID' },
  { name: 'name', type: 'text', placeholder: 'Name' },
