---
// BodyworkForm.astro
const handleSubmit = async (event) => {
    event.preventDefault(); // Evita la recarga del formulario

    // Confirma que la función se está ejecutando
    alert('Formulario enviado');

    const id = parseInt(event.target.id.value);
    const name = event.target.name.value;
    const data = { id, name };

    console.log('Datos a enviar:', data);

    try {
        const response = await fetch('http://localhost:8090/bodyworks/add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
        });

        console.log('Estado de la respuesta:', response.status);

        if (response.ok) {
        const result = await response.json();
        console.log('Resultado:', result);
        alert('Carrocería agregada con éxito: ' + JSON.stringify(result));
        } else if (response.status === 409) {
        alert('Ya existe una carrocería con el mismo ID o nombre.');
        } else {
        const errorMessage = await response.text();
        alert(`Error: ${response.status} - ${errorMessage}`);
        console.error(`Error en la respuesta: ${response.status}`, errorMessage);
        }
    } catch (error) {
        console.error('Error al enviar los datos:', error);
        alert('Error al enviar los datos: ' + error.message);
    }
};
---

<!-- Formulario HTML -->
<form onsubmit={handleSubmit} class="space-y-4">
    <label class="block">
        <span class="text-gray-700">ID:</span>
        <input type="number" name="id" class="mt-1 block w-full border rounded" required />
    </label>

    <label class="block">
        <span class="text-gray-700">Nombre:</span>
        <input type="text" name="name" class="mt-1 block w-full border rounded" required />
    </label>

    <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
        Guardar
    </button>
</form>
